.inner-pane-lower
  .tabbable.tabs-below
    .tab-content
      - @l_branches.each_with_index do |b, index|
        - if b.name == @request.local_branch
          .tab-pane.active{:id => "tab#{index}"}
            %p= "this is tab#{index}"
            %a{ pjax_link_options('/show2.html', :log_pane) }
              = 'Link'

    %ul.nav.nav-tabs{:style => 'position: absolute; bottom: 0; left: 0; right: 0;'}
      - @l_branches.each_with_index do |b, index|
        - if b.name == @request.local_branch
          %li.active
            %a= b.name
        - else
          %li
            %a{ pjax_link_options(@request.modified_url(:local_branch => b.name), :log_pane) }= b.name
